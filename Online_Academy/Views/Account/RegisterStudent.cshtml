
@{
    Layout = "~/Views/Shared/_loginLayoutPage.cshtml";
}

<div class="account-container">
    <div class="heading-bx left">
        <h2 class="title-head">Sign Up <span>Now</span></h2>
        <p>Login Your Account <a href="/Account/Login">Click here</a></p>
    </div>
    <form class="contact-bx">
        <div class="row placeani">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your Name</label>
                        <input id="name" name="dzName" type="text" required="" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your account name</label>
                        <input id="username" name="dzName" type="text" required="" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your Email Address</label>
                        <input id="email" name="dzName" type="email" required="" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your Password</label>
                        <input id="password" name="dzEmail" type="password" class="form-control" required="">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <span class="validation-message" style="color: red"></span>
                </div>
            </div>
            <div class="col-lg-12 m-b30">
                <button id="SubmitRegister" name="submit" type="button" value="Submit" class="btn button-md">Sign Up</button>
            </div>
            <div class="col-lg-12">
                <h6>Sign Up with Social media</h6>
                <div class="d-flex">
                    <a class="btn flex-fill m-r5 facebook" href="#"><i class="fa fa-facebook"></i>Facebook</a>
                    <a class="btn flex-fill m-l5 google-plus" href="#"><i class="fa fa-google-plus"></i>Google Plus</a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tên tài khoản hoặc email của bạn đã tồn tại.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section script {
    <script src="~/Assets/Admin/js/registerStudent.js"></script>
    }