
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_loginLayoutPage.cshtml";
}

<div class="account-container">
    <div class="heading-bx left">
        <h2 class="title-head">Forget <span>Password</span></h2>
        <p>Login Your Account <a href="/Account/Login">Click here</a></p>
    </div>
    <form class="contact-bx" action="/Account/changePasswordHandler" method="post">
        <div class="row placeani">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your new password</label>
                        <input id="email" name="email" type="text" required="" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Confirm password</label>
                        <input id="confirm" name="confirmPass" type="text" required="" class="form-control">
                        <span class="validation-message" style="color: red"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 m-b30">
                <button name="submit" type="submit" id="submitBtn" value="Submit" class="btn button-md">Submit</button>
            </div>
        </div>
    </form>
</div>

@section script {
    <script src="~/Assets/Admin/js/changePassword.js"></script>
    }


