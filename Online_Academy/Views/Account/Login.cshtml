@{ Layout = "~/Views/Shared/_loginLayoutPage.cshtml"; }

<div class="account-container">
    <div class="heading-bx left">
        <h2 class="title-head">Login to your <span>Account</span></h2>
        <p>Don't have an account? <a href="register.html">Create one here</a></p>
    </div>
    <form class="contact-bx" id="form-login">
        <div class="row placeani">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your Name</label>
                        <input name="username" id="username" type="text" required="" class="form-control" value="@ViewBag.username">
                        <span class="form-message"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your Password</label>
                        <input name="password" id="password" type="password" class="form-control" required="" value="@ViewBag.pass">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <span class="validation-message" style="color: red"></span>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group form-forget">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customControlAutosizing" name="rememberCheck" value="true">
                        <label class="custom-control-label" for="customControlAutosizing">Remember me</label>
                    </div>
                    <a href="/Account/ForgetPassword" class="ml-auto">Forgot Password?</a>
                </div>
            </div>
            <div class="col-lg-12 m-b30">
                <button type="button" id="SubmitLogin" class="btn button-md">Login</button>
            </div>
            <div class="col-lg-12">
                <h6>Login with Social media</h6>
                <div class="d-flex">
                    <a class="btn flex-fill m-r5 facebook" href="#"><i class="fa fa-facebook"></i>Facebook</a>
                    <a class="btn flex-fill m-l5 google-plus" href="#"><i class="fa fa-google-plus"></i>Google Plus</a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Đăng nhạp không thành công
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section script {
    <script src="~/Assets/Admin/js/login.js"></script>"
}