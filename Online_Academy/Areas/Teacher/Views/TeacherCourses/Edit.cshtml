@model Online_Academy.Models.Course

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<main class="ttr-wrapper">
    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position: absolute; top: 30%; left: 45%; color: White;">
            <img src="~/Assets/Users/images/loading.gif">
        </p>
    </div>
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Add listing</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li>Edit Course</li>
            </ul>
        </div>

        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>Add listing</h4>
                    </div>

                    <div class="widget-inner">
                        <form class="edit-profile m-b30" enctype="multipart/form-data" id="upload">
                            <div class="row">
                                <div class="col-12">
                                    <div class="ml-auto">
                                        <h3>1. Basic info</h3>
                                        @Html.HiddenFor(model => model.id, new { @id = "id" })
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label class="col-form-label">Name Course</label>
                                    <div>
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @id = "namecourse" } })
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label class="col-form-label">Category</label>
                                    <div>
                                        @Html.DropDownListFor(model => model.id_subcat, (SelectList)ViewBag.id_subcat, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">Price</label>
                                    <div>
                                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", @id = "price" } })
                                    </div>
                                </div>
                                <div class="form-group col-6">
                                    <label class="col-form-label">Discount</label>
                                    <div>
                                        @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control", @id = "discount" } })
                                    </div>
                                </div>

                                <div class="seperator"></div>

                                <div class="col-12 m-t20">
                                    <div class="ml-auto m-b5">
                                        <h3>2. Description</h3>
                                    </div>
                                </div>

                                <div class="form-group  col-6">
                                    <label class="col-form-label">Thumbnail Description</label>
                                    <div>

                                        <input type="file" name="fileimg" id="fileimg" accept="image/*" />
                                    </div>
                                </div>
                                @if (Model.thumbnail == null)
                                {
                                    <div class="form-group col-6">
                                        <div id="imgPreview" class="thumbnail" style="display:none">
                                            <img class="img-responsive" id="targetImg" />

                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group col-6">
                                        <div id="imgPreview" class="thumbnail">
                                            <img src="~/Assets/Pictures/ImagesCourse/@Model.thumbnail" class="img-responsive" id="targetImg" />

                                        </div>
                                    </div>
                                }

                                <div class="form-group col-6">
                                    <label class="col-form-label">Preview</label>
                                    <div>
                                        <input type="file" name="preview" id="preview" accept="video/*" />
                                    </div>
                                </div>
                                @if (Model.preview == null)
                                {
                                    <div class="form-group col-6">
                                        <video width="300" height="300" controls id="videopreview" style="display:none">
                                        </video>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group col-6">
                                        <video width="300" height="300" controls id="videopreview">
                                            <source src="~/Assets/Videos/@Model.preview" />
                                        </video>
                                    </div>
                                }
                                <div class="form-group col-12">
                                    <label class="col-form-label">Course short description</label>
                                    <div>
                                        @Html.TextAreaFor(model => model.short_description, new { @class = "form-control", @id = "shortdes" })
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label class="col-form-label">Course description</label>
                                    <div>
                                        @Html.TextAreaFor(model => model.description, new { @class = "form-control", @id = "description" })
                                    </div>
                                </div>
                                <div class="col-12 m-t20">
                                    <div class="ml-auto">
                                        <h3 class="m-form__section">3. Add Item</h3>
                                    </div>
                                </div>
                                <div class="col-12">
                                    @Html.Partial("~/Areas/Teacher/Views/TeacherCourses/Chapter.cshtml")

                                </div>
                                <div class="col-12">
                                    <button type="button" class="btn-secondry add-item m-r5"><i class="fa fa-fw fa-plus-circle"></i>Add Item</button>
                                    <button type="button" class="btn btn-save" id="btn-draft">Save</button>
                                  
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>

    </div>
</main>

