@{ 
    Layout = "~/Areas/Admin/Views/Shared/_loginLayoutPage.cshtml";
}

<div class="account-container">
    <div class="heading-bx left">
        <h2 class="title-head">Forget <span>Password</span></h2>
        <p>Login Your Account <a href="/Admin/Login/Index">Click here</a></p>
    </div>
    <form class="contact-bx" action="/Admin/ForgetPassword/SendMail" method="post">
        <div class="row placeani">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="input-group">
                        <label>Your Email Address</label>
                        <input id="email" name="email" type="text" required="" class="form-control">
                        <span class="validation-message" style="color: red"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 m-b30">
                <button name="submit" type="submit" id="submitBtn" value="Submit" class="btn button-md">Submit</button>
            </div>
        </div>
    </form>
</div>

@section script {
    <script src="~/Assets/Admin/js/forgetPassword.js"></script>"
    }
